	"devDependencies": {
		"@eslint/js": "^9.11.1",
		"eslint": "^9.11.1",
		"globals": "^15.9.0",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"tailwindcss": "^3.4.13"
	},
	"peerDependencies": {
		"htmx.org": "^2.0.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/NomadicDaddy/htmx-debugger.git"
	},
	"bugs": {
		"url": "https://github.com/NomadicDaddy/htmx-debugger/issues"
	},
