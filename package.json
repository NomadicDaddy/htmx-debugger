{
	"name": "htmx-debugger",
	"version": "1.0.0",
	"description": "htmx-debugger - a debugging tool for htmx applications",
	"author": "Phillip Beazley <phillip@beazley.org>",
	"license": "MIT",
	"main": "devtools.html",
	"keywords": [
		"htmx",
		"debugging",
		"chrome-extension"
	],
	"scripts": {
		"css": "tailwindcss -c ./tailwind.config.mjs -i ./tailwind.css -o ./output.css --minify",
